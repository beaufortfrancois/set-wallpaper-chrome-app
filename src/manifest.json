{
  "name": "Set image as Wallpaper in Chrome OS",
  "short_name": "Set Wallpaper",
  "version": "1.3",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "128": "128.png"
  },
  "file_handlers": {
    "image": {
      "types": [
        "image/png",
        "image/jpeg"
      ]
    }
  },
  "permissions": [
    "notifications",
    "wallpaper"
  ],
  "app": {
    "background": {
      "scripts": [ "background.js" ]
    }
  },
  "manifest_version": 2
}
